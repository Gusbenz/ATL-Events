<!doctype html>
<html>
<head>
    <title>Facebook Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">
<div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <% if (user.facebook.myname != undefined) { %>
        <!-- FACEBOOK INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span>Facebook</h3>

                    <p>
                        <strong>Name</strong>: <%= user.facebook.myname %><br>
                        <strong>Profile ID</strong>: <%= user.facebook.oauthID %><br>
                        <strong>Email</strong>: <%= user.facebook.email %><br>
                        <img src="<%= user.facebook.photo %>"/><br>
                        <!-- <strong>name</strong>: <%= user.photo %> -->
                    </p>

            </div>
        </div>

    </div>
    <% }; %>
    <% if (user.twitter.username != undefined) { %>
    <!-- Twitter INFORMATION -->
       <div class="row">

        <!-- TWITTER INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>

                    <p>
                        <strong>ID</strong>: <%= user.twitter.oauthID %><br>
                        <strong>Username</strong>: <%= user.twitter.username %><br>
                        <strong>Full Name</strong>: <%= user.twitter.displayName %><br>
                    </p>

            </div>
        </div>
    </div>
    <% } %>
    <!-- Local User Info -->
    <% if (user.local.email != undefined) { %>
    <!-- Twitter INFORMATION -->
       <div class="row">

        <!-- TWITTER INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-info"><span class="fa fa-user"></span> Profile</h3>

                    <p>
                        <strong>First Name</strong>: <%= user.local.firstName %><br>
                        <strong>Last Name</strong>: <%= user.local.lastName %><br>
                        <strong>Email</strong>: <%= user.local.email %><br>
                    </p>

            </div>
        </div>
    </div>
    <% } %>
    </div>
</body>
</html>
