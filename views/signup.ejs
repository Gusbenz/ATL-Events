<% include ./partials/head %>

<body class="signup_page">

 <h2>Create a new account</h2>
  <form id="local-reg" action="/signup" method="post">
    <div>
        <label>First Name:</label>
        <input type="text" style="color: black" name="firstName" id="firstName"/>
    </div>
    <div>
        <p></p>
        <label>Last Name:</label>
        <input type="text" style="color: black" name="lastName" id="lastName"/>
    </div>
    <div>
        <p></p>
        <label>Email:</label>
        <input type="text" style="color: black" name="email" id="email"/>
    </div>
    <div>
    <p></p>
        <label>New Password:</label>
        <input type="password" style="color: black" name="password" id="password"/>
    </div>
    <div>
        <input type="submit" class="btn btn-primary btn-sm" value="Signup"/>
    </div>
  </form>
  <div class="flash">
                <% if (typeof message !== 'undefined') { %>
                  <% if (typeof message.error !== 'undefined' && message.error.length > 0) { %>
                    <div class="bg-danger"><%= message.error %></div>
                  <% } %>
                <% if (typeof message.info !== 'undefined' && message.info.length > 0) { %>
                <div class="bg-info"><%= message.info %></div>
                <% } %>
                  <% if (typeof message.success !== 'undefined' && message.success.length > 0) { %>
                  <div class="bg-success"><%= message.success %></div>
                  <% } %>
                <% } %>
              </div>

</body>

